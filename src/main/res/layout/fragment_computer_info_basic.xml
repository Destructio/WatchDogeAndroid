<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBlueGrey600">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragmentComputerInfoImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="22dp" />

        <TextView
            android:id="@+id/fragmentComputerInfoTextName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            tools:text="TEST TEST 123" />
    </TableRow>

    <TextView
        android:id="@+id/fragmentComputerInfoTextBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorWhite"
        android:textIsSelectable="true"
        android:textSize="18sp"
        tools:text="SAMPLE TEXT TEXT SAMPLE 1234567890" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorBlueGrey900"
        app:srcCompat="@android:drawable/ic_menu_send" />


</LinearLayout>